{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext", // Changed from CommonJS to ESNext for ESM support
		"moduleResolution": "Node", // Added for proper module resolution
		"lib": ["ES2020"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"allowJs": true,
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
